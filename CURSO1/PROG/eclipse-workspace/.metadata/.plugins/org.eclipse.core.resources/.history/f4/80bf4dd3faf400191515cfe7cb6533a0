package pack;

import java.util.Scanner;

public class Moneda {
	public double pedir() {
		Scanner sc = new Scanner(System.in);
		double din = 0.0;		//dinero introducido
		
		do {
			System.out.println("Introduzca monedas (€)");
			din = sc.nextDouble();
			if (din < 0) {
				System.out.println("ERROR");
			}
		} while (din < 0);
		
		System.out.println("Dinero acumulado: "+din+" €");

		sc.close();
		return(din);
	}
}