				lp.listar();
				break;
			case 2:
				if (lp == null) {
					
				}
				break;
			case 3:
				
				break;
			case 4:
				break;
			default:
				break;
			}
			
			if (n != 1 && n != 2 && n != 3 && n != 4) System.err.println("ERROR");
			
		} while (n != 1 && n != 2 && n != 3 && n != 4);
	}
}